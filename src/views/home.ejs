<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>

</head>

<body>
    <div style="margin: 50;">
        <div style="display: flex; text-align: center; justify-content: space-between;">
            <h1>List user :
            </h1>
            <div>
                <a href="create-user" class="btn btn-warning">create a new user</a>
            </div>
        </div>
        <hr />
        <div>

            <table class="table table-hover table-bordered">
                <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% users.forEach( function (users) { %>

                        <tr>
                            <td>
                                <%= users.id %>
                            </td>
                            <td>
                                <%= users.name %>
                            </td>
                            <td>
                                <%= users.email %>
                            </td>
                            <td>
                                <%= users.address %>
                            </td>
                            <td>
                                <div style="display: flex; gap: 10px;">
                                    <form action="handle-view-user/<%= users.id %>" method="post">
                                        <button type="submit" class="btn btn-warning">View </button>
                                    </form>
                                    <form action="handle-delete-user/<%= users.id %>" method="post">
                                        <button type="submit" class="btn btn-danger">Delete </button>
                                    </form>
                                </div>

                            </td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>

        </div>
    </div>
</body>

</html>